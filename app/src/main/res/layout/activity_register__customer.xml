<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Customer">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"></Space>

            <Button
                android:id="@+id/button1"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:text="Register Customer"
                android:layout_gravity="end"
                android:textColor="#ffffff"
                android:background="#9C44E9" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"></Space>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="text"
                    android:drawableRight="@drawable/register_name"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></Space>
                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@drawable/register_mail"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></Space>
                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:drawableRight="@drawable/register_mobile"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></Space>
                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="text"
                    android:drawableRight="@drawable/register_address"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></Space>

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/register_password"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></Space>
                <CheckBox
                    android:id="@+id/showpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Show Password"
                    android:textColor="#000000"></CheckBox>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"></Space>
            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:text="Register"
                android:layout_gravity="start"
                android:textColor="#ffffff"
                android:background="#9C44E9" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"></Space>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:background="#ffffff">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Back to Login"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:textColor="#FFFFFF"
                    android:background="#9C44E9"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>